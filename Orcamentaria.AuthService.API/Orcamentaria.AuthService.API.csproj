    <PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning" Version="5.1.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.5" />
    <PackageReference Include="Orcamentaria.Lib.Application" Version="1.3.1" />
    <PackageReference Include="Orcamentaria.Lib.Domain" Version="9.2.8" />
    <PackageReference Include="Orcamentaria.Lib.Infrastructure" Version="4.2.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Orcamentaria.AuthService.Application\Orcamentaria.AuthService.Application.csproj" />
    <ProjectReference Include="..\Orcamentaria.AuthService.Infrastructure\Orcamentaria.AuthService.Infrastructure.csproj" />
  </ItemGroup>

